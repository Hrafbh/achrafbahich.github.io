---
import "../styles/global.css";
import LangSwitch from "../components/LangSwitch.astro";
import type { Lang } from "../i18n/config";
import { t } from "../i18n/ui";

const {
  title = "Portfolio",
  description = "",
  lang,
} = Astro.props as {
  title?: string;
  description?: string;
  lang: Lang;
};
---
<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>
  <body>
    <header style="padding: 18px 0;">
      <div class="container" style="display:flex; align-items:center; justify-content:space-between; gap:14px;">
        <a href={`/${lang}/`} style="font-weight:700; letter-spacing:.2px;">
          {t(lang, "site_title")}
        </a>

        <nav style="display:flex; align-items:center; gap:10px;">
          <a class="btn" href={`/${lang}/`}>{t(lang, "nav_home")}</a>
          <a class="btn" href={`/${lang}/projects/`}>{t(lang, "nav_projects")}</a>
          <LangSwitch lang={lang} />
        </nav>
      </div>
    </header>

    <main class="container" style="padding: 10px 0 40px;">
      <slot />
    </main>

    <footer style="padding: 22px 0 40px; opacity:.75;">
      <div class="container">
        <div style="border-top:1px solid rgba(255,255,255,0.10); padding-top:16px;">
          <small>© {new Date().getFullYear()} — Achraf Bahich</small>
        </div>
      </div>
    </footer>
  </body>
</html>
