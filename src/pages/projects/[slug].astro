---
import { LANGS, t } from "../../i18n/ui.js";
import LangSwitch from "../../components/LangSwitch.astro";

export function getStaticPaths() {
  return LANGS.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{t(lang, "site_title")}</title>
  </head>
  <body>
    <main style="max-width:1050px;margin:0 auto;padding:18px;">
      <div style="display:flex;justify-content:space-between;align-items:center;gap:12px;">
        <h1 style="margin:0;">{t(lang, "site_title")}</h1>
        <LangSwitch lang={lang} path="/" />
      </div>

      <p style="color:#555;margin-top:8px;">{t(lang, "hero_subtitle")}</p>

      <p style="margin-top:16px;">
        <a href={`/${lang}/projects`} style="text-decoration:none;border:1px solid #eee;padding:10px 14px;border-radius:12px;display:inline-block;">
          {t(lang, "projects_title")}
        </a>
      </p>
    </main>
  </body>
</html>
